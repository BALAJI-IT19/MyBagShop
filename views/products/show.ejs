<%- include("./header.ejs") %>

    <head>
        <title>item details</title>
        <link rel="stylesheet" href="../css/show.css">

    </head>

    <body>
        <div class="container">
            <h3>ITEM DETAILS</h3>
            <div class="card mt-3 ml-5">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img class="card-img" src="../../img/Assets/<%= product.imgURL%>" class="card-img-top" alt="...">
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <a class="card-title" href="<%= product.id %>">
                                <%= product.name%>
                            </a>
                            <p class="card-text">By
                                <%=product.manufacturer %>
                            </p>
                            <p class="price">$
                                <%= product.price %>
                            </p>
                            <p class="cart-text rating">Rating:
                                <%= product.rating %>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <% if(loggedInUser.role=="admin") {%>
                                <a href="/products/<%=product._id %>/edit" role="button"><img class="card-img-logo" src="../../img/Assets/Icons/pencil.png" alt="..."></a>
                                <form action="/products/<%=product._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn"><img class="card-img-logo" src="../../img/Assets/Icons/delete.png" alt="..."></button>
                                </form>
                                <%}%>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="mt-3 card-text">About:
                            <%= product.about %>
                        </p>

                    </div>
                </div>
            </div>

            <%- include("./footer.ejs") %>