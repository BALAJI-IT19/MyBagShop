<%- include("./header.ejs") %>
    <title>All Products</title>
    <link rel="stylesheet" href="../../css/product.css">
    </head>

    <body>
        <div class=" row add-cart">
            <% for(let product of products){ %>
                <div class="col-3">
                    <div class="card flex add-cart text-white" style="width:16rem;">
                        <div class="container">
                            <img src="../../img/Assets/<%= product.imgURL%>" class="mt-3 card-img-top" alt="...">
                            <div class="bottom-left">$
                                <%= product.price %>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="products/<%= product.id %>">
                                    <%= product.name %>
                                </a>
                            </h5>
                            <p class="card-text">By
                                <%=product.manufacturer %>|
                                    <span> Rating:
                                        <%= product.rating%></span>

                            </p>
                        </div>
                        <% if(loggedInUser.role=="user") {%>
                            <%let obj = JSON.stringify(product)%>
                                <p><button onclick="changeButton('<%= obj %>',event)" id="<%= product.id %>" class="add-cart">Buy</button></p>

                                <% } %>
                    </div>
                </div>
                <%} %>
        </div>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
        <script src="../../js/main.js"></script>

        <%- include("./footer.ejs") %>